<% provide(:title, @product.name) %>
<h3><%= @product.name %></h3>
Description:
<p class="product"><%= @product.description%></p>
Price:
<p class="product"><%= @product.price%> VND</p>
<% session[:product_id] = @product.id %>

<div class="row">
	<div class="span3">
		<%= form_tag('/add_to_cart') do %>

		    <%= submit_tag "Add to Cart", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>