<% provide(:title, 'Edit order') %>
<h1> Edit order</h1>
<h2>Welcome to My Project</h2>
<div class="row">
  <div class="span6 offset3">
    <h4>Order Date: 
    <%= @order.orderdate %> </h4>
    <%= form_for(@order) do |ff| %>
		<%= ff.label :status %>
      	<%= ff.select :status, options_for_select(["New", "Delivering", "Delivered"]),
      					{}, class: "select_box" %>
      	<%= ff.submit "Save change", class: "btn btn-large btn-success" %>
    <% end %>
  </div>
</div>