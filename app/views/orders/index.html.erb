<% provide(:title, 'My orders') %>
<h1>My orders</h1>
<% if @orders.count == 0 %>
	<h2>Ban chua co don hang nao</h2>
<% else %>
	<table class="table table-striped" style="font-size:18px">
		<thead>
		<tr>
			<th> Order Date </th>
			<th> Status </th>
			<th> &nbsp; </th>
		</tr>
		</thead>
		<tbody>
	  		<%= render @orders %>
	  	</tbody>
	</table>
<% end %>